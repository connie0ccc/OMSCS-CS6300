<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignWithParentIfMissing="false"
    android:background="#301200"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="60dp"
        android:background="#76A5D8"
        android:backgroundTint="#7CBCFB"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp">

        <EditText
            android:id="@+id/editTextTextPersonName"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="SDP Encryptor Spring 2023"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="814dp"
        android:background="#EEEEEE"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="58dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="652dp"
            android:background="#EEEEEE"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="58dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent">

                </FrameLayout>

                <EditText
                    android:id="@+id/editTextTextPersonName2"
                    android:layout_width="132dp"
                    android:layout_height="80dp"
                    android:backgroundTint="#EDEDED"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Entry Text"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/entryTextID"
                    android:layout_width="254dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textAlignment="viewStart" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent">

                </FrameLayout>

                <EditText
                    android:id="@+id/editTextTextPersonName2"
                    android:layout_width="132dp"
                    android:layout_height="80dp"
                    android:backgroundTint="#EDEDED"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Arg Input 1"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/argInput1ID"
                    android:layout_width="259dp"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:ems="10"
                    android:inputType="number"
                    android:text="1"
                    android:textAlignment="textStart" />

                <FrameLayout
                    android:layout_width="14dp"
                    android:layout_height="match_parent">

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="10dp"
                            android:layout_height="match_parent">

                        </FrameLayout>
                    </FrameLayout>

                    <EditText
                        android:id="@+id/editTextTextPersonName2"
                        android:layout_width="132dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#EDEDED"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Arg Input 2"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:typeface="normal" />

                    <EditText
                        android:id="@+id/argInput2ID"
                        android:layout_width="116dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:ems="10"
                        android:inputType="number"
                        android:text="1" />

                    <FrameLayout
                        android:layout_width="13dp"
                        android:layout_height="match_parent">

                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="12dp"
                    android:layout_height="match_parent">

                </FrameLayout>

                <Button
                    android:id="@+id/encryptButtonID"
                    android:layout_width="385dp"
                    android:layout_height="match_parent"
                    android:onClick="handleClick"
                    android:shadowColor="@color/white"
                    android:text="Encrypt Entry Text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextTextPersonName17"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:backgroundTint="#EDEDED"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Entry Text Encrypted"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:typeface="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="396dp"
                    android:layout_height="130dp"
                    android:background="#D8D8D8"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:background="#EDEDED" />

                    <EditText
                        android:id="@+id/textEncryptedID"
                        android:layout_width="387dp"
                        android:layout_height="134dp"
                        android:backgroundTint="#EDEDED"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Encrypt Entry Text"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:typeface="normal" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>